---
import Slidebar from "../landing/Slidebar"
---

<div class="head">
    <div class="fondoNav">
    </div>
<header>
       <div class="toolbar">
        <div class="col-titulo-empresa-navbar">
            <div class="titulo-empresa-logotipo">
           
            <h1>AirportShuttlecr.com</h1>
        </div>
           
    </div>
       <div class="menu">          
           <a href="/" class="menu-item">
            <button class="button-head">
            Home
          </button>  
        </a>
          
           <a href="/contact" class="menu-item">
            <button class="button-head">
            Contact
          </button></a>             
       </div>
       <div class="slide-opac">
        <Slidebar/>
        </div>   
   </div>
</header>
</div>

<style>
    .titulo-empresa-logotipo{
        display: flex;    
    }
    .titulo-empresa-logotipo h1{
      margin: 25px;
      font-weight: bold;
      font-family: Comic Sans MS; 
      font-size: 15px;
        color: #EBD758;
        text-shadow: -1px 0 #000, 0 1px #000, 1px 0 #000, 0 -1px #000;
    }
    .col-titulo-empresa-navbar{
            display: flex;
            flex-direction: column;
            flex-flow: column;
    }
 
   
    .slide-opac{
        visibility: hidden;
    }
   @media only screen and (max-width: 840px) {
        .slide-opac{
    visibility: visible;
}
.titulo-empresa-logotipo h1{
    visibility: hidden;
}

    }
.button-head {
  font-family: monospace;
  background-color: #f3f7fe;
  color: #3b82f6;
  border: none;
  border-radius: 8px;
  width: 100px;
  height: 45px;
  transition: .3s;
}

.button-head:hover {
  background-color: #3b82f6;
  box-shadow: 0 0 0 5px #3b83f65f;
  color: #fff;
}
.head{
height: 60px;
width: 100%;
position:fixed;
top:0;
z-index: +100000000000;
background-image: linear-gradient(360deg,transparent,rgba(0, 0, 0, 0.66));
}
.toolbar{
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
}
.s-title{
    font-size: 10px;
}
.menu{
    color: rgba(0, 0, 0, 1);
    display: flex;
    margin-left: 200px;
}
.menu-item{
    margin: 30px;
    font-weight: bolder;
    
    text-decoration: solid;
    text-shadow: 2px 2px rgba(0, 0, 0, 0.1);    
}
.titulo{
    margin-left: 50px;
    font-weight: bold;
    text-shadow: 2px 2px rgba(0, 0, 0, 0.1);
    color: rgba(0, 0, 0, 0.9)
}



</style>

